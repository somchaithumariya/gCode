var date = new Date()
var year =[date.getFullYear()].map(y=>{if(y<2100){y=parseInt (y)+543} return y})[0]
date = [date.getDate(),date.getMonth()+1,year].join("/")

var date = new Date()
var year =[ date.getFullYear()].map(y=>{if(y<2100){y=parseInt (y)+543} return y})[0]
date = [('00'+date.getDate()).slice(-2),('00'+(parseInt(date.getMonth())+1)).slice(-2),year].join("/")  //0 นำหน้า
